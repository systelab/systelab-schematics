{
  "$schema": "http://json-schema.org/schema",
  "id": "listbox",
  "title": "Creates a listbox.",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the simple schematic within.",
      "visible": false
    },
    "name": {
      "description": "Specifies the name of the generated Class.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "api": {
      "description": "Specifies the api name.",
      "type": "string",
    },
    "model": {
      "description": "Specifies the model name.",
      "type": "string",
    },
    "module": {
      "description": "Specifies the module name.",
      "type": "string",
    },
    "spec": {
      "type": "boolean",
      "description": "Specifies if a spec file is generated.",
      "default": true
    },
    "paginated": {
      "type": "boolean",
      "description": "Specifies if the api is paginated.",
      "default": false
    },
    "flat": {
      "type": "boolean",
      "description": "Flag to indicate if a directory is created.",
      "default": false
    }
  },
  "required": [
    "name"
  ],
  "additionalProperties": false
}